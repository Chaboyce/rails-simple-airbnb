<div class="container">
  <div class="col">
    <div class="row">
      <h1>All our Flats(<%=@flats.count%>)</h1>
    </div>
  </div>
  <div class="row d-flex">
      <% @flats.each do |flat| %>
        <div class="col-4">
          <div class="card">
            <h5 class="card-title"><%=flat.name %></h5>
            <p class="card-text"><%=flat.address %></p>
            <p class="card-text"><%=flat.price_per_night %></p>
            <p class="card-text"><%=flat.number_of_guests %></p>
          </div>
         </div>
      <% end %>
  </div>
</div>
